#!/usr/bin/env bash
#
# Test runner for /mind/concepts/update
#
set -e

BRANE_ROOT="$(cd "$(dirname "$0")/../../../.." && pwd)"
source "$BRANE_ROOT/tests/lib.sh"

INPUT=$(cat)
workspace

case "$TC_CASE_NAME" in
  00-success-update-name)
    init_mind
    create_concept '{"name": "AuthService", "type": "Entity"}'
    ;;
  01-success-update-type)
    init_mind
    create_concept '{"name": "Warning", "type": "Entity"}'
    ;;
  02-error-not-found)
    init_mind
    ;;
  03-error-missing-id)
    init_mind
    ;;
esac

echo "$INPUT" | brane /mind/concepts/update
